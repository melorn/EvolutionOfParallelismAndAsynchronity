<Window x:Class="SimpleAsyncAwait.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SimpleAsyncAwait"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        mc:Ignorable="d">
	<Grid>
		<Button x:Name="btnCompute"
		        Width="75"
		        Margin="253,27,0,0"
		        HorizontalAlignment="Left"
		        VerticalAlignment="Top"
		        Click="btnCompute_Click"
		        Content="Compute" />
		<TextBox x:Name="txbInput"
		         Width="213"
		         Height="23"
		         Margin="22,24,0,0"
		         HorizontalAlignment="Left"
		         VerticalAlignment="Top"
		         TextWrapping="Wrap" />
		<TextBlock x:Name="txtResult"
		           Width="473"
		           Height="247"
		           Margin="22,52,0,0"
		           HorizontalAlignment="Left"
		           VerticalAlignment="Top"
		           TextWrapping="Wrap" />

	</Grid>
</Window>
